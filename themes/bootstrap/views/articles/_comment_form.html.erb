<%= form_tag @article.comment_url :class => 'form-horizontal' do %>
<div id='commentform'>
  <h3><%= t(".comment")%> <em><%=@article.title%></em></h3>

  <div class='form-group'>
    <label for="inputName" class="col-md-2 control-label"><%= t(".your_name") %></label>
    <div class="col-md-4">
      <%= text_field "comment", "author", :class => 'form-control', :placeholder => t(".your_name") %>
    </div>
  </div>
  <div class='form-group'>
    <label for="inputEmail" class="col-md-2 control-label"><%= t(".email_address") %></label>
    <div class="col-md-4">
      <%= text_field "comment", "email", :class => 'form-control', :placeholder => t(".email_address") %>
    </div>
  </div>
  <div class='form-group'>
    <label for="inputWebsite" class="col-md-2 control-label"><%= t(".your_website") %></label>
    <div class="col-md-4">
      <%= text_field "comment", "url", :class => 'form-control', :placeholder => t(".your_website") %>
    </div>
  </div>
  <div class='form-group'>
    <label for="inputComment" class="col-md-2 control-label"><%= t(".comment") %></label>
    <div class="col-md-6">
      <%= text_area 'comment', 'body', :rows => 8, :class => 'form-control' %>
    </div>
  </div>

  <% if this_blog.use_recaptcha %>
  <div class='form-group'><%= raw recaptcha_tags :ajax => true %></div>
  <% end %>

  <input type='submit' id='form-submit-button' class='btn btn-info col-offset-md-2' value="<%= t('.comment') %>" />
</div>
<% end %>
