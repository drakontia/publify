<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=yes, maximum-scale=1.0, minimum-scale=1.0">
  <%= render 'shared/page_header' %>
  <title><%=h page_title %></title>
  <%= stylesheet_link_tag '/stylesheets/theme/style.css', :media => 'all' %>
  <%= stylesheet_link_tag '/stylesheets/theme/eorzeaclock.css', :media => 'all' %>
  <%= javascript_include_tag '/javascripts/theme/eorzeaclock.js' %>
  <!--[if IE 6]>
      <%= stylesheet_link_tag '/stylesheets/theme/ie6.css', :media => 'all' %>
  <![endif]-->
</head>

<body>
  <div id="wrapper">
    <!-- start header -->
    <div id="header">
      <h1><%= link_to this_blog.blog_name, this_blog.base_url %></h1>
      <p class="desc"><%= this_blog.blog_subtitle %></p>
    </div>
    <!-- end header -->

    <div id="page">
      <div id="sidebar">
        <div id="eorzeaclock">&nbsp;</div><script type="text/javascript">EorzeaClock()</script>
        <!-- sidebar components -->
        <%= render_sidebars %>
      </div>

      <div id="content">
        <%= yield %>
        <%= javascript_tag 'show_dates_as_local_time()' %>
      </div>

      <div id="footer">
        <div class="wrap">
          <p id="legal">
          Powered by <%= link_to('publify', 'http://publify.co')) %>
          Designed by <%= link_to('Hélène', 'http://www.o2sources.com/people/helene %>
          </p>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

