<div class="post">
  <h2 class="title"><%= @page_title %></h2>
  <% unless @tags.empty? %>
    <ul>
      <% for tag in @tags.sort_by{|grp|grp.display_name} %>
        <li>
          <%= link_to_permalink(tag, tag.display_name) %>
          <%= link_to_permalink(tag, "#{tag.articles.size} <span class='glyphicon glyphicon-link'></span>".html_safe, nil, 'btn btn-success btn-xs').html_safe %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p><%= t(".there_is_no_tags") %></p>
  <% end %>
</div>
<p><%= paginate(@tags, right: "#{t(".next_page")} &raquo;", left: "&laquo; #{t('.previous_page')}") %></p>
