<%- content_for :page_heading do %>
<h2>
  <i class="glyphicon glyphicon-large glyphicon-cog"></i>
  <%= t(".write") %>
</h2>
<% end %>

<%= form_tag action: 'update' do %>

<fieldset class='form-horizontal'>
  <legend><%= _("Publish")%></legend>
  <div class='form-group'>
    <label class='checkbox' for="setting_send_outbound_pings"><%= _("Send trackbacks")%></label>
    <%= check_box(:setting, :send_outbound_pings) %>
    <span class='help-block'><%= _("When publishing articles, Publify can send trackbacks to websites that you link to. This should be disabled for private blogs as it will leak non-public information to sites that you're discussing. For public blogs, there's no real point in disabling this.")%></span>
  </div>
  <div class='form-group'>
    <label class='control-label' for="setting_ping_urls"><%= _("URLs to ping automatically")%></label>
    <%= text_area(:setting, :ping_urls, :rows => 4, :class => 'col-md-6') %>
  </div>
  <div class='form-group'>
    <label class='control-label' for="setting_geourl_location"><%= _("Latitude, Longitude")%></label>
    <%= text_field(:setting, :geourl_location, { :class => 'col-md-6'})%>
    <span class='help-block'><%= _("Display")%> <a href="http://geourl.org"><%= _("your latitude and longitude")%></a> (<%= _("example")%>: <tt>47.774,-122.201</tt>)</span>
  </div>
</fieldset>

<fieldset class='form-horizontal'>
  <legend><%= _("Media")%></legend>
  <div class='form-group'>
    <label class='control-label' for="setting_image_thumb_size"><%= _("Image thumbnail size")%></label>
    <div class='input-group'>
      <%= text_field(:setting, :image_thumb_size, { :class => 'col-md-3'})%><span class='add-on'>px</span>
    </div>
  </div>
  <div class='form-group'>
    <label class='control-label' for="setting_image_medium_size"><%= _("Image medium size")%></label>
    <div class='input-group'>
      <%= text_field(:setting, :image_medium_size, { :class => 'col-md-3'})%><span class='add-on'>px</span>
    </div>
  </div>
  <div class='form-group'>
    <label class='control-label' for="image_avatar_size"><%= _("Avatar size")%></label>
    <div class='input-group'>
      <%= text_field(:setting, :image_avatar_size, { :class => 'col-md-3'})%><span class='add-on'>px</span>
    </div>
  </div>
</fieldset>

<fieldset class='form-horizontal'>
  <legend><%= t(".publish_on_twitter")%></legend>
  <%- unless twitter_available?(this_blog, current_user) %>
    <p class='alert alert-warning'>
      <%= t(".how_to_setup_twitter", twitter_settings_link: link_to(t(".fill_the_twitter_credentials"), controller: 'admin/settings', action: 'write'), twitter_registration_link: link_to(t(".registered_your_application"), "https://dev.twitter.com/apps/new")) %>
    </p>
  <%- end %>
  <div class='form-group'>
    <label class='control-label' for="setting_twitter_consumer_key"><%= _("Twitter consumer key")%></label>
    <%= text_field(:setting, :twitter_consumer_key, { :class => 'col-md-6'})%>
  </div>
  <div class='form-group'>
    <label class='control-label' for="setting_twitter_consumer_secret"><%= _("Twitter consumer secret")%></label>
    <%= text_field(:setting, :twitter_consumer_secret, { :class => 'col-md-6'})%>
  </div>
</fieldset>

<%= hidden_field_tag 'from', 'write' %>
<div class='form-group'>
  <%= link_to(t(".cancel"), {action: 'index'}, class: 'btn') %>
  <%= t(".or") %>
  <%= submit_tag(t(".update_settings"), class: 'btn btn-success') %>
</div>
<% end %>
